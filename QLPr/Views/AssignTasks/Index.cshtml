@model IEnumerable<QLPr.Models.AssignTask>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @using (@Html.BeginForm("Index", "AssignTasks", FormMethod.Get))
    {
<p>
    Search: @Html.TextBox("SearchString")
    Dep : @Html.DropDownList("depa","all")
    Com : @Html.DropDownList("comp","all")

    <input type="submit" value="submit" />
    
</p>
    }
</p>
<table class="table">
    <tr>
